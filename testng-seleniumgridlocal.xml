<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Selenium WebDriver Selenium Grid Local test suite">
    <test name="Selenium tests on Local Chrome">
        <parameter name="browser" value="localchrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.seleniumgridjenkins.JuiceShopTests">
                <methods>
                    <include name="testRegisterUser"/>
                    <include name="testUserLogin"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Selenium tests on Local Firefox">
        <parameter name="browser" value="localfirefox"/>
        <classes>
            <class name="io.github.mfaisalkhatri.seleniumgridjenkins.JuiceShopTests">
                <methods>
                    <include name="testRegisterUser"/>
                    <include name="testUserLogin"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>