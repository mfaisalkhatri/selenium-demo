<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Selenium WebDriver Cross browser tests suite" parallel="tests">

    <test name="Selenium Cross Browser Tests on Chrome" >
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.crossbrowsertests.CrossBrowserTestsWithThreadLocal">
                <methods>
                    <include name="testLoginPage"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Selenium Cross Browser Tests on Firefox"  >
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="io.github.mfaisalkhatri.crossbrowsertests.CrossBrowserTestsWithThreadLocal">
                <methods>
                    <include name="testLoginPage"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Selenium Cross Browser Tests on Edge" >
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="io.github.mfaisalkhatri.crossbrowsertests.CrossBrowserTestsWithThreadLocal">
                <methods>
                    <include name="testLoginPage"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Selenium Cross Browser Tests on Safari">
        <parameter name="browser" value="safari"/>
        <classes>
            <class name="io.github.mfaisalkhatri.crossbrowsertests.CrossBrowserTestsWithThreadLocal">
                <methods>
                    <include name="testLoginPage"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
